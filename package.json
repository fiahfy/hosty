{
  "name": "hosty",
  "description": "Hosts file manager based on Electron",
  "version": "0.8.0",
  "author": {
    "name": "fiahfy",
    "email": "d.fiahfy@gmail.com",
    "url": "http://fiahfy.blogspot.com/"
  },
  "dependencies": {
    "electron-devtools-installer": "^2.2.0",
    "electron-window-state": "^4.1.1",
    "material-design-icons": "^3.0.1",
    "sudo-prompt": "^8.1.0",
    "typeface-roboto": "^0.0.54",
    "vue": "^2.4.2",
    "vue-router": "^3.0.1",
    "vuetify": "^1.0.17",
    "vuex": "^3.0.0",
    "vuex-persistedstate": "^2.0.0",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "electron": "^2.0.0",
    "electron-builder": "^20.0.4",
    "eslint": "^4.4.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.2.2",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.0.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "vue-loader": "^15.0.9",
    "vue-template-compiler": "^2.0.0",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0"
  },
  "keywords": [
    "electron",
    "vue",
    "vuetify",
    "webpack"
  ],
  "main": "main.js",
  "private": true,
  "productName": "Hosty",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/hosty"
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production run-s webpack",
    "build:electron": "build",
    "dev": "cross-env HMR=1 run-p dev-server start:main",
    "dev-server": "webpack-dev-server --config webpack/config.renderer.hmr.babel.js",
    "lint": "eslint src --ext .js,.vue",
    "release": "run-s build \"build:electron -mw -p onTagOrDraft\"",
    "start": "run-s webpack:renderer start:main",
    "start:main": "run-s webpack:main start:main:electron",
    "start:main:electron": "electron main.js",
    "test": "run-s lint",
    "watch": "run-s webpack -- -w",
    "watch:main": "run-s webpack:main -- -w",
    "watch:renderer": "run-s webpack:renderer -- -w",
    "webpack": "webpack --config webpack/config.babel.js",
    "webpack:main": "webpack --config webpack/config.main.babel.js",
    "webpack:renderer": "webpack --config webpack/config.renderer.babel.js"
  }
}
