{
  "name": "hosty",
  "description": "Hosts file manager based on Electron",
  "version": "0.8.8",
  "author": {
    "name": "fiahfy",
    "email": "d.fiahfy@gmail.com",
    "url": "http://fiahfy.blogspot.com/"
  },
  "dependencies": {
    "@fiahfy/electron-accelerator-formatter": "^0.0.2",
    "@nuxtjs/vuetify": "^0.4.3",
    "debounce": "^1.2.0",
    "electron-devtools-installer": "^2.2.3",
    "electron-window-state": "^5.0.1",
    "is-ip": "^2.0.0",
    "nuxt": "^2.3.4",
    "sudo-prompt": "^8.1.0",
    "vuex-persistedstate": "^2.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "electron": "^3.0.10",
    "electron-builder": "^20.8.1",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-loader": "^2.1.1",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-vue": "^5.0.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.15.3",
    "sass-loader": "^7.1.0"
  },
  "keywords": [
    "electron",
    "nuxt",
    "vue",
    "vuetify"
  ],
  "main": "main.js",
  "private": true,
  "productName": "Hosty",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/hosty"
  },
  "scripts": {
    "dev": "nuxt & cross-env NODE_ENV=development electron main.js",
    "generate": "nuxt generate",
    "lint": "eslint -f codeframe --ext .js,.vue --ignore-path .gitignore .",
    "package": "electron-builder",
    "release": "npm run generate & npm run package -- -mw -p onTagOrDraft",
    "resources": "npm run resources:icns; npm run resources:ico",
    "resources:icns": "icns-convert build/icon.png",
    "resources:ico": "ico-convert build/icon.png",
    "start": "electron .",
    "test": "npm run lint"
  }
}
