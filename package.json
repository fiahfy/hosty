{
  "name": "hosty",
  "description": "Hosts file manager based on Electron",
  "version": "0.8.7",
  "author": {
    "name": "fiahfy",
    "email": "d.fiahfy@gmail.com",
    "url": "http://fiahfy.blogspot.com/"
  },
  "dependencies": {
    "@fiahfy/electron-accelerator-formatter": "^0.0.2",
    "debounce": "^1.2.0",
    "electron-devtools-installer": "^2.2.0",
    "electron-window-state": "^5.0.1",
    "is-ip": "^2.0.0",
    "material-design-icons-iconfont": "^4.0.2",
    "sudo-prompt": "^8.1.0",
    "typeface-roboto": "^0.0.54",
    "vue": "^2.4.2",
    "vue-router": "^3.0.1",
    "vuetify": "^1.2.3",
    "vuex": "^3.0.0",
    "vuex-persistedstate": "^2.0.0",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@fiahfy/icns-convert": "^0.0.4",
    "@fiahfy/ico-convert": "^0.0.4",
    "babel-loader": "^8.0.2",
    "cross-env": "^5.0.5",
    "css-loader": "^1.0.0",
    "electron": "^3.0.0",
    "electron-builder": "^20.0.4",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-vue": "^5.0.0-beta.4",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.14.3",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.23.0",
    "url-loader": "^1.0.1",
    "vue-loader": "^15.0.9",
    "vue-template-compiler": "^2.0.0",
    "webpack": "^4.1.0",
    "webpack-cli": "^3.0.3",
    "webpack-dev-server": "^3.1.0"
  },
  "keywords": [
    "electron",
    "vue",
    "vuetify",
    "webpack"
  ],
  "main": "main.js",
  "private": true,
  "productName": "Hosty",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/hosty"
  },
  "scripts": {
    "build": "run-p build:*",
    "build:main": "webpack --config webpack/config.main.babel.js",
    "build:renderer": "webpack --config webpack/config.renderer.babel.js",
    "dev": "cross-env HMR=1 run-p dev-server start:main",
    "dev-server": "webpack-dev-server --config webpack/config.renderer.dev.babel.js",
    "lint": "eslint -f codeframe --ext .js,.vue --ignore-path .gitignore .",
    "package": "electron-builder",
    "release": "cross-env NODE_ENV=production run-s build \"package -mw -p onTagOrDraft\"",
    "resources": "run-p resources:*",
    "resources:icns": "icns-convert build/icon.png",
    "resources:ico": "ico-convert build/icon.png",
    "start": "run-s build:renderer start:main",
    "start:main": "run-s build:main start:main:electron",
    "start:main:electron": "electron main.js",
    "test": "run-s lint"
  }
}
