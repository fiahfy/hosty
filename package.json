{
  "name": "hosty",
  "description": "Hosts file manager based on Electron",
  "version": "0.5.0",
  "author": {
    "name": "fiahfy",
    "email": "d.fiahfy@gmail.com",
    "url": "http://fiahfy.blogspot.com/"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "history": "^4.6.3",
    "is-electron-renderer": "^2.0.1",
    "material-ui": "^0.18.6",
    "prop-types": "^15.5.8",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-redux": "5.0.0-alpha.6",
    "react-tap-event-plugin": "^2.0.1",
    "redux": "3.6.0",
    "redux-actions": "^2.2.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^4.8.2",
    "redux-thunk": "^2.2.0",
    "roboto-fontface": "^0.7.1",
    "sudo-prompt": "^7.1.0",
    "validator": "^7.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.4",
    "electron": "^1.6.11",
    "electron-builder": "^19.13.0",
    "electron-rebuild": "^1.5.11",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "file-loader": "^0.11.2",
    "resolve-url-loader": "^2.1.0",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.5.1"
  },
  "keywords": [
    "electron",
    "hosts",
    "material-ui",
    "react",
    "redux",
    "webpack"
  ],
  "main": "main.js",
  "private": true,
  "productName": "Hosty",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiahfy/hosty"
  },
  "scripts": {
    "archive": "cd dist; ls Hosty* | xargs -I{} zip -r {}.zip {}",
    "build": "webpack --config webpack/config.babel.js",
    "build:main": "webpack --config webpack/config.main.babel.js",
    "build:renderer": "webpack --config webpack/config.renderer.babel.js",
    "hot:renderer": "webpack-dev-server --config webpack/config.renderer.hot.babel.js",
    "install": "npm run build",
    "lint": "eslint src --ext .js,.jsx",
    "package": "NODE_ENV=production npm run build && build -mw",
    "package:mac": "NODE_ENV=production npm run build && build -m",
    "package:win": "NODE_ENV=production npm run build && build -w",
    "start": "npm run watch & npm run build:main; electron main.js",
    "start:hot": "npm run hot:renderer & npm run build:main; HOT=1 electron main.js",
    "test": "npm run lint",
    "watch": "npm run build -- -w",
    "watch:main": "npm run build:main -- -w",
    "watch:renderer": "npm run build:renderer -- -w"
  }
}
